@model VmPackage
@{
    ViewData["Title"] = "Index";
}



<!-- START SECTION BANNER -->
<section class="breadcrumb_section overlay_bg2 page-title-light parallax_bg"
         data-parallax-bg-image="/images/about_bg.jpg">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                <div class="page-title animation"
                     data-animation="fadeInUp"
                     data-animation-delay="0.1s">
                    <h1>Package</h1>
                </div>
                <nav aria-label="breadcrumb"
                     class="animation"
                     data-animation="fadeInUp"
                     data-animation-delay="0.1s">
                    <ol class="breadcrumb justify-content-center">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">
                            Package
                        </li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</section>
<!-- END SECTION BANNER -->
<!-- START SECTION POPULAR TOURS -->
<section>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-9">
                <div class="heading_s3 mb-md-4 text-center animation"
                     data-animation="fadeInUp"
                     data-animation-delay="0.1s">
                    <h2>Popular Tours Package</h2>
                </div>
                <p class="text-center animation"
                   data-animation="fadeInUp"
                   data-animation-delay="0.2s">
                    Lorem ipsum dolor sit amet, consectetur adipiscing elit. Phasellus
                    blandit massa enim. Nullam id varius nunc id varius nunc.
                </p>
            </div>
        </div>
        <div class="row">
            @foreach (var package in Model.TourPackages)
            {

                <div class="col-md-4 col-sm-6">
                    <div class="tour_box animation"
                         data-animation="fadeInUp"
                         data-animation-delay="0.4s">
                        <div class="tour_img">
                            <img src="~/images/@package.Image" alt="tour_img" />
                            <div class="hover_info">
                                <a href="#" class="btn btn-default">Book Now</a>
                            </div>
                        </div>
                        <div class="tour_info">
                            <h5><a href="#">@package.Name</a></h5>
                            <p>
                                @package.Desc
                            </p>
                            <div class="tour_foot">
                                <div class="tour_price">
                                    <h4 class="text_default">$@package.Price</h4>
                                    <span>@package.Day days @package.Night nights</span>
                                </div>
                                <div class="tour_stars">
                                    <div class="stars">
                                        <i class="ion-android-star"></i>
                                        <i class="ion-android-star"></i>
                                        <i class="ion-android-star"></i>
                                        <i class="ion-android-star"></i>
                                        <i class="ion-android-star-half"></i>
                                    </div>
                                    <span>(4.5 Rating)</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</section>
<!-- END SECTION POPULAR TOURS -->
<!-- START SECTION CLIENT LOGO -->
<section class="light_gray_bg">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="cl_logo_slider owl-carousel owl-theme"
                     data-margin="30"
                     data-loop="true"
                     data-autoplay="true"
                     data-dots="false"
                     data-autoplay-timeout="2000">
                    @foreach (var partner in Model.Partners)
                    {
                        <div class="item">
                            <a href="@partner.Link"><img src="~/images/@partner.Image" alt="cl_logo1" /></a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
<!-- START SECTION CLIENT LOGO -->
<!-- START SECTION TESTIMONIAL -->
<section>
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <div class="small_padding bg-dark text_white animation"
                     data-animation="fadeInLeft"
                     data-animation-delay="0.1s">
                    <div class="heading_s3 heading_light mb-md-4 text-center">
                        <h2>Clients Feedback</h2>
                    </div>
                    <div class="testimonial_slider testimonial_style5 carousel_slide1 owl-carousel owl-theme"
                         data-margin="30"
                         data-loop="true"
                         data-autoHeight="true"
                         data-autoplay="true">

                        @foreach (var feedback in Model.Feedbacks)
                        {
                            <div class="item">
                                <div class="testimonial_box">
                                    <div class="testimonial_img">
                                        <img class="rounded-circle m-auto"
                                             src="~/assets/images/@feedback.Image"
                                             alt="user" />
                                    </div>
                                    <div class="testi_meta">
                                        <h6>@feedback.Name</h6>
                                        <span>@feedback.Position</span>
                                        <p>
                                            @feedback.Desc
                                        </p>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="fancy_style2 animation"
                     data-animation="fadeInRight"
                     data-animation-delay="0.1s">
                    <img src="images/testimonial_img.jpg" alt="testimonial_img" />
                </div>
            </div>
        </div>
    </div>
</section>
<!-- END SECTION TESTIMONIAL -->